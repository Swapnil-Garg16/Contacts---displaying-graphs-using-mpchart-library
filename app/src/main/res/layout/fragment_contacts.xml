<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp.mycontacts.ContactsFragment">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardBackgroundColor="#ffffff"
        card_view:contentPadding="10dp">




        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="left|top">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weekly Contacted Chart"
                android:textStyle="bold"
                android:textColor="#e8a317"
                android:layout_alignParentTop="true"/>

            <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barchart"
            android:layout_width="match_parent"
                android:layout_below="@+id/textView"
                android:layout_marginTop="5sp"
            android:layout_height="300dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view1"
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/card_view"
        android:layout_marginBottom="20sp"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardBackgroundColor="#ffffff"
        card_view:contentPadding="10dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="left|top">

        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frequently contacted people"
            android:textStyle="bold"
            android:textColor="#e8a317"
            android:layout_alignParentTop="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:background="@mipmap/arora"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView1"
            android:background="@mipmap/ankit_one"

            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:background="@mipmap/vj"
            android:layout_alignTop="@+id/imageView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ankit - 25%"
            android:id="@+id/textView6"
            android:textColor="#000000"
            android:layout_marginLeft="15sp"
            android:layout_alignParentBottom="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arora-14%"
            android:id="@+id/textView7"
            android:textColor="#000000"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="vj-13%"
            android:id="@+id/textView8"
            android:textColor="#000000"
            android:layout_marginLeft="25sp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/imageView2"
            android:layout_alignStart="@+id/imageView2" />


    </RelativeLayout>
    </android.support.v7.widget.CardView>
    </RelativeLayout>
</FrameLayout>
